mixin reviewForm(store)
    form(action=urls.REVIEW_STORE_URL(store._id) method='POST')
        textarea(name='text' placeholder='Did you try this place?' cols='30' rows='10')

        .reviewer__meta
            .reviewer__stars
                each num in [5, 4, 3, 2, 1]
                    input(type='radio' name='rating'  id=`star${num}` value=num required)
                    label(for=`star${num}`) #{num} Stars

            input.button(type='submit' value='Submit Review')